.jumbotron {
    text-align: center;
    background-color white

    h1 {
        margin-top 0px
        color: $dark-gray;
        font-weight: lighter;
    }

    hr {
        display: block;
        width: 20%;
        border 1px solid $dark-gray
    }

    p {
        font-weight lighter
        font-size 22px
        color $light-gray
    } 

    .btn-primary.btn-my-work {
        padding: 15px;
        margin-top: 40px;
        width 200px
        font-size 16px
        font-weight normal
        color $dark-gray
        background-color white
        border 1px solid $dark-gray
        transition: width .3s;
    }
    .btn-primary.btn-my-work:hover {
        color $blue
        font-weight bold
        width 220px
        border 1px solid $green
    }
}

.home-highlight-wrap {

    background: linear-gradient(to bottom right, $blue, $green);
    padding-top 85px
    padding-bottom 85px
    margin-top 20px
    margin-bottom 20px

    .highlight-hover-area {
        text-align: center;
        padding: 20px;

        h4
        {
            font-weight lighter
        }

        a, a:hover, a:visited {
            cursor pointer
            text-decoration none
            color white
            
        }

        i {
            font-size 82px
            display block
            color white
        }
    }
}

.row-quotes

    blockquote:nth-child(even)
        background-color $white-gray
        border-right 5px solid $blue

    blockquote
        color $dark-gray
        margin-top 40px
        padding 35px

        footer
            color $light-gray
            margin-top: 0px;
            padding-top: 0px;
